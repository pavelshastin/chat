.service
	.service__container
		
		.service__header_area
			h3.service__header ЗАЯВКА НА РЕМОНТ И ОБСЛУЖИВАНИЕ В
			.select_input
				.arrow_area
					.arrow_down
				input(id="service__form_city" form="service_form" type="text" value="ТОЛЬЯТТИ").service__form_city
				ul.service__form_city_items
					li(id="service__form_city_tol") ТОЛЬЯТТИ
					li(id="service__form_city_sysr") СЫЗРАНЬ
		
		form(name="service__form" id="service__form" action="#" method="post").service__form
			
			.service__form_name
				label(for="service__form_name") Представьтесь пожалуйста <span class="asterix">*</span> 
				input(id="service__form_name" type="text" placeholder="Иванов Ив|"  required)
			
			.service__form_phone
				label(for="service__form_phone") Телефон <span class="asterix">*</span> 
				input(id="service__form_phone" type="text" placeholder="+7 999 666 99 66" required)
			
			.service__form_email
				label(for="service__form_email") E-mail 
				input(id="service__form_email" type="text" placeholder="example@mail.ru")			

			.service__form_model
				label(for="service__form_model") Марка автомобиля 
				input(id="service__form_model" type="text" placeholder="Honda Civic")

			.service__form_type
				label(for="service__form_type") Вид сервиса
				.select_input
					.arrow_area
						.arrow_down 
					input(id="service__form_type" type="text" placeholder="Система охлаждения")
					ul.service__form_type_items
						li(id="service__form_type_item-1") Техническое обслуживание
						li(id="service__form_type_item-2") Система охлаждения
						li(id="service__form_type_item-3") Шиномонтажные работы
						li(id="service__form_type_item-4") Геометрия подвески
						li(id="service__form_type_item-5") Подвеска, рулевое управление
						li(id="service__form_type_item-6") Тормозная система
						li(id="service__form_type_item-7") Аккумуляторы и свечи
						li(id="service__form_type_item-8") Генератор, стартер и ремни
						li(id="service__form_type_item-9") Оптика
						li(id="service__form_type_item-10") Система кондиционирования
						li(id="service__form_type_item-11") Трансмиссия
						li(id="service__form_type_item-12") Другое
