			.service__form_date
				label(for="service__form_date") Удобная дата и время обслуживания <span class="asterix">*</span> 
				input(id="service__form_date" type="text" placeholder="22.05.2018 в 18:00" required)
			
			.service__form_proposal
				label(for="service__form_proposal") Дополнительные пожелания 
				textarea(id="service__form_proposal" placeholder="Напишите дополнительные пожелания по обслуживанию")

			.service__form_personal
				label(for="service__form_personal")  
